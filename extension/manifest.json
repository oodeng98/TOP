{
  "manifest_version": 3,
  "name": "TOP",
  "version": "1.0",
  "permissions": [
    "nativeMessaging",
    "tabs",
    "storage",
    "identity",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["node_modules/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
